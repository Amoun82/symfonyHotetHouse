{% extends 'base.html.twig' %}

{% block title %}Gestion Avis
{% endblock %}

{% block body %}
	<h1 class="text-center my-4">Gestion des Avis</h1>

	<div class="container">
		<table class="table table-dark table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Nom Prenom/Pseudo</th>
					<th>Contenu de l'avis</th>
					<th>Categorie</th>
					<th>Date Enregistrement</th>
					<th>option</th>
				</tr>
			</thead>
			<tbody>
				{% for avi in avis %}
					{# {{ dump(avi) }} #}
					<tr>
						<td>{{ avi.id }}</td>
						<td>{{ avi.pseudo }}</td>
						<td>{{ avi.contenu }}</td>
						<td>{{ avi.categorie }}</td>
						<td>{{ avi.dateEnregistrement|date("d/m/Y Ã  H:i/s") }}</td>
						<td>
							<a href="{{ path('app_admin_avis_delete', {id: avi.id}) }}" class="text-danger">supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
