{% extends 'base.html.twig' %}

{% block title %}Hello MembreController!{% endblock %}

{% block body %}
<h1 class="text-center my-4">Gestion des Membres</h1>

	<div class="container">
		<a href="{{ path('app_admin_membre_new') }}" class="btn btn-primary my-2">Ajouter un membre</a>
		<table class="table table-dark">
			<thead>
				<tr>
					<th>#</th>
					<th>pseudo</th>
					<th>Nom</th>
					<th>Prenom</th>
					<th>Email</th>
					<th>Civilité</th>
					<th>Date Enregistrement</th>
                    <th>Roles</th>
					<th>option</th>
				</tr>
			</thead>
			<tbody>

				{% for membre in membres %}
					<tr>
						<td>{{ membre.id }}</td>
						<td>{{ membre.pseudo }}</td>
						<td>{{ membre.nom }}</td>
						<td>{{ membre.prenom }}</td>
						<td>{{ membre.email }}</td>
						<td>{{ membre.civilite }}</td>
						<td>{{ membre.dateEnregistrement|date("d/m/Y à H:i/s") }}</td>
						<td>{{ membre.roles|join(", ") }}</td>
						<td>
							<a href="{{ path('app_admin_membre_update' , {id: membre.id}) }}" class="text-warning">modifier</a>
							{# <a href="{{ path('app_admin_membre_delete', {id: membre.id}) }}" class="text-danger">supprimer</a> #}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
