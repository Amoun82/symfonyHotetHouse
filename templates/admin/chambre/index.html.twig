{% extends 'base.html.twig' %}

{% block title %}gestion Chambre{% endblock %}

{% block body %}
<h1 class="text-center my-4">Gestion des Chambres</h1>

	<div class="container">
		<a href="{{ path('app_admin_chambre_new') }}" class="btn btn-primary my-2">Ajouter une chambre</a>
		<table class="table table-dark table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Titre</th>
					<th>Description courte</th>
					<th>Description longue</th>
					<th>Photo</th>
					<th>Prix journalier</th>
					<th>Date Enregistrement</th>
					<th>option</th>
				</tr>
			</thead>
			<tbody>
				{% for chambre in chambres %}
					<tr>
						<td>{{ chambre.id }}</td>
						<td>{{ chambre.titre }}</td>
						<td>{{ chambre.descriptionCourte }}</td>
						<td>{{ chambre.descriptionLongue|slice(0,10) }}...</td>
						<td>
							<img src="{{ asset(img_dir ~ chambre.photo) }}" alt="{{ chambre.photo }}" style="max-height: 100px;">
						</td>
						<td>{{ chambre.prixJournalier }}</td>
						<td>{{ chambre.dateEnregistrement|date("d/m/Y Ã  H:i/s") }}</td>
						<td>
							<a href="{{ path('app_admin_chambre_update' , {id: chambre.id}) }}" class="text-warning">modifier</a>
							<a href="{{ path('app_admin_chambre_delete', {id: chambre.id}) }}" class="text-danger">supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
