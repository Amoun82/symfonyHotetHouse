{% extends 'base.html.twig' %}

{% block title %}Hotel House
{% endblock %}

{% block body %}
	<h1 class="text-center my-3">Hotel House</h1>

	<div id="carouselExampleCaptions" class="carousel slide">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>
		<div class="carousel-inner">
			{% for slider in sliders %}
				<div class="carousel-item {% if loop.first %} active {% endif %}">
					<img src="{{ asset(img_dir ~ slider.photo) }}" class="d-block w-100" alt="{{ slider.photo }}">
					<div class="carousel-caption d-none d-md-block">
						<h5 class="text-white">{% if slider.ordre == 1 %} {{ 'Chambre' }} {% elseif slider.ordre == 2 %} {{ 'Restaurant' }} {% elseif slider.ordre == 3 %} {{ 'Soin' }} {% endif %}</h5>
						<p><a class="text-white" href="{% if slider.ordre == 1 %} {{ path('app_chambre') }} {% elseif slider.ordre == 2 %} {{ path('app_restaurant_carte') }} {% elseif slider.ordre == 3 %} {{ path('app_spa') }} {% endif %}">
						{% if slider.ordre == 1 %} {{ 'Nos chambres' }} {% elseif slider.ordre == 2 %} {{ 'Notre Restaurant' }} {% elseif slider.ordre == 3 %} {{ 'Notre centre de Soin' }} {% endif %}
						</a></p>
					</div>
				</div>
			{% endfor %}
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</div>
	{% for chambre in chambres %}
		{# {{ dump(chambre) }} #}

		<div class="d-flex {% if loop.index % 2 %} flex-row {% else %} flex-row-reverse {% endif %} mt-5">
			<div class="card rounded mb-3" style="max-width: 540px;">
				<div class="row g-0">
					<div class="col-md-6 d-flex align-items-center">
						<img src="{{ asset(img_dir ~ chambre.photo) }}" class="img-fluid rounded-start" alt="{{ chambre.photo }}">
					</div>
					<div class="col-md-6 d-flex align-items-center">
						<div class="card-body">
							<h5 class="card-title">{{ chambre.titre }}</h5>
							<p class="card-text">{{ chambre.descriptionCourte }}</p>
							<p class="card-text">la journée :
								<small class="text-body-secondary">{{ chambre.prixJournalier }}€</small>
							</p>
							<a href="{{ path('app_home_bedroom_show', {id: chambre.id}) }}" class="text-decoration-none">détail de La Chambre</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}


	{#   {{ asset(img_site ~ 'soin.jpg') }} {% endif %}" class="img-fluid rounded-start" alt="{% if avi.categorie == 'chambre' %} {{ 'chambre.jpg' }} {% elseif avi.categorie == 'restaurant' %} {{ 'restaurant.jpg' }} {% elseif avi.categorie == 'spa' %} {{ 'soin.jpg' }} {% endif %}"> #}

	<div class="row d-flex justify-content-around mt-5">
		<div class="col-md-4 text-center" style="width: 18rem;">
			<img src="{{ asset(img_site ~ 'chambre.jpg') }}" class="rounded-circle" width="150" height="150" alt="...">
			<div class="card-body text-center mt-1">
				<h5 class="card-title">Chambre</h5>
				<p class="card-text">Lorem.</p>
				<a href="{{ path('app_chambre') }}" class="btn btn-primary p-1">Les chambres</a>
			</div>
		</div>
		<div class="col-md-4 text-center" style="width: 18rem;">
			<img src="{{ asset(img_site ~ 'restaurant.jpg') }}" class="rounded-circle" width="150" height="150" alt="...">
			<div class="card-body text-center mt-1">
				<h5 class="card-title">Restaurant</h5>
				<p class="card-text">Lorem.</p>
				<a href="{{ path('app_restaurant_carte') }}" class="btn btn-primary p-1">Restaurant et Carte</a>
			</div>
		</div>
		<div class="col-md-4 text-center" style="width: 18rem;">
			<img src="{{ asset(img_site ~ 'soin.jpg') }}" class="rounded-circle" width="150" height="150" alt="...">
			<div class="card-body text-center mt-1">
				<h5 class="card-title">Spa</h5>
				<p class="card-text">Lorem.</p>
				<a href="{{ path('app_spa') }}" class="btn btn-primary p-1">Les soins</a>
			</div>
		</div>
	</div>

{% endblock %}
