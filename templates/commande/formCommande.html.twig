{% extends "base.html.twig" %}

{% block title %}
	Ajouter commande
{% endblock %}

{% block body %}
	<h1 class="text-center my-4">Ajouter une commande</h1>


	{# {{ dump(form) }} #}

	<div class="container">
		{{ form_start(form, {
			attr: {
				novalidate: 'novalidate'
			}
		}) }}


		{{ form_row(form.date_arrivee) }}
		{{ form_row(form.date_depart) }}


		{# {{ form_row(form.prix_total) }} #}

		{{ form_row(form.nom , { 
                attr: {
                    placeholder: "Ajouter votre nom"
                }
            }) }}

		{{ form_row(form.prenom , { 
                attr: {
                    placeholder: "Ajouter un prénom"
                }
            }) }}

		{{ form_row(form.telephone , { 
                attr: {
                    placeholder: "Ajouter votre téléphone"
                }
            }) }}

		{{ form_row(form.email , { 
                attr: {
                    placeholder: "Ajouter un email"
                }
            }) }}

		{{ form_row(form.id_chambre) }}


		<button class="btn btn-primary" type="submit">envoyer</button>

		{{ form_end(form) }}
	</div>
{% endblock %}
